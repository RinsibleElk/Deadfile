    <Style
        x:Key="GeometryAddItemButton"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <StackPanel x:Name="sp" Background="Transparent">
                        <Viewbox
                            Width="50"
                            Height="50"
                            Stretch="Uniform">
                            <Path
                                x:Name="pth"
                                Data="{StaticResource AddItemButtonGeometry}"
                                Fill="{DynamicResource GrayBrush1}">
                                <Path.Effect>
                                    <DropShadowEffect
                                        x:Name="pthds"
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        ShadowDepth="4" />
                                </Path.Effect>
                            </Path>
                        </Viewbox>
                        <Label
                            x:Name="lbl"
                            Width="50"
                            Height="26"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center">
                            Add
                        </Label>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger SourceName="sp" Property="IsMouseOver" Value="True">
                            <Setter TargetName="pth" Property="Fill" Value="{DynamicResource AccentBaseColorBrush}" />
                            <Setter TargetName="lbl" Property="FontWeight" Value="Bold" />
                            <Setter TargetName="lbl" Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                        </Trigger>
                        <Trigger SourceName="sp" Property="IsEnabled" Value="False">
                            <Setter TargetName="pth" Property="Fill" Value="{DynamicResource GrayBrush7}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
