                                        Source="../Resources/import-export-hover.png" />
                                    <Label
                                        Width="{StaticResource HomePageButtonSize}"
                                        Height="{StaticResource HomePageButtonLabelHeight}"
                                        HorizontalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        FontWeight="Bold">
                                        Export to JSON
                                    </Label>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <ImageBrush
        x:Key="QuoteButtonImageBrush"
        ImageSource="../Resources/quote.png"
        Stretch="Uniform" />
    <ImageBrush
        x:Key="QuoteInactiveButtonImageBrush"
        ImageSource="../Resources/quote.png"
        Stretch="Uniform" />
    <ImageBrush
        x:Key="QuoteHoverButtonImageBrush"
        ImageSource="../Resources/quote-hover.png"
        Stretch="Uniform" />

    <Style
        x:Key="QuoteButton"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource QuoteButtonImageBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource QuoteHoverButtonImageBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource QuoteInactiveButtonImageBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>


