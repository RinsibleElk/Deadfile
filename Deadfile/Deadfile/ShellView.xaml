<controls:MetroWindow x:Class="Deadfile.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deadfile"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:Deadfile.Infrastructure.Converters;assembly=Deadfile.Infrastructure"
             xmlns:tab="clr-namespace:Deadfile.Tab.Tab;assembly=Deadfile.Tab"
             Background="Black"
             GlowBrush="Black"
             BorderThickness="0"
             TitleCharacterCasing="Lower"
             x:Name="Deadfile"
             Title="deadfile"
             Icon="Resources/logo.png"
             WindowStartupLocation="CenterScreen"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <controls:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Margin="0 -1 8 0"
                        VerticalAlignment="Center"
                        FontFamily="Harlow"
                        FontSize="{DynamicResource WindowTitleFontSize}"
                        FontStyle="Italic"
                        Text="{TemplateBinding Content}"
                        TextTrimming="CharacterEllipsis" />
        </DataTemplate>
    </controls:MetroWindow.TitleTemplate>
    <DockPanel>
        <DockPanel.Resources>
            <converters:SwitchConverter x:Key="ExperienceToImage">
                <converters:SwitchConverterCase When="Clients" Then="Resources/client-tab.png" />
                <converters:SwitchConverterCase When="Jobs" Then="Resources/job-tab.png" />
                <converters:SwitchConverterCase When="Home" Then="Resources/home-tab.png" />
                <converters:SwitchConverterCase When="LocalAuthorities" Then="Resources/localauthority-tab.png" />
            </converters:SwitchConverter>
        </DockPanel.Resources>
        <dragablz:TabablzControl
            x:Name="Items"
            ShowDefaultCloseButton="True"
            ClosingItemCallback="{Binding ClosingItemActionCallback}"
            ItemContainerStyle="{StaticResource TrapezoidDragableTabItemStyle}"
            AdjacentHeaderItemOffset="-10">
            <dragablz:TabablzControl.HeaderItemTemplate>
                <DataTemplate DataType="tab:TabViewModel">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="16" Width="16" Source="{Binding ContentArea.Experience, Converter={StaticResource ExperienceToImage}}"></Image>
                        <TextBlock Text="{Binding DisplayName}" />
                    </StackPanel>
                </DataTemplate>
            </dragablz:TabablzControl.HeaderItemTemplate>
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController InterTabClient="{Binding InterTabClient}" />
            </dragablz:TabablzControl.InterTabController>
            <dragablz:TabablzControl.HeaderSuffixContent>
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding OpenNewTab}" Style="{StaticResource AddTabButton}" />
                </StackPanel>
            </dragablz:TabablzControl.HeaderSuffixContent>
        </dragablz:TabablzControl>
    </DockPanel>
</controls:MetroWindow>



