                                            Grid.Row="1"
                                            Grid.RowSpan="2"
                                            Grid.Column="3">
                                            <TextBox
                                                Margin="0,20,0,0"
                                                controls:TextBoxHelper.Watermark="Client Address First Line"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource PksTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressFirstLine}" />
                                            <TextBox
                                                Margin="0,0,0,0"
                                                controls:TextBoxHelper.Watermark="Client Address Second Line"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource PksTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressSecondLine}" />
                                            <TextBox
                                                Margin="0,0,0,0"
                                                controls:TextBoxHelper.Watermark="Client Address Third Line"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource PksTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressThirdLine}" />
                                            <TextBox
                                                Margin="0,0,0,0"
                                                controls:TextBoxHelper.Watermark="Client Post Code"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource PksTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressPostCode}" />
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Style="{StaticResource PksTextBlock}"
                                            Text="Property:" />
                                        <TextBox
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            controls:TextBoxHelper.Watermark="Property"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            Style="{StaticResource PksTextBox}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.Project}" />
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Style="{StaticResource PksTextBlock}"
                                            Text="Job Description:" />
                                        <TextBox
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            controls:TextBoxHelper.Watermark="Description"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            Style="{StaticResource PksTextBox}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.Description}" />
                                    </Grid>
                                </Border>
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource PksTextBlock}"
                                        Text="For:" />
