<UserControl
    x:Class="Deadfile.Tab.Invoices.InvoicesPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Deadfile.Infrastructure.Behaviors;assembly=Deadfile.Infrastructure"
    xmlns:billablemodel="clr-namespace:Deadfile.Model.Billable;assembly=Deadfile.Model"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:designTime="clr-namespace:Deadfile.Infrastructure.DesignTime;assembly=Deadfile.Infrastructure"
    xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:entity="clr-namespace:Deadfile.Entity;assembly=Deadfile.Entity"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:Deadfile.Tab.Invoices"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Deadfile.Model;assembly=Deadfile.Model"
    xmlns:templates="clr-namespace:Deadfile.Infrastructure.Templates;assembly=Deadfile.Infrastructure"
    xmlns:utils="clr-namespace:Deadfile.Model.Utils;assembly=Deadfile.Model"
    d:DataContext="{d:DesignInstance Type=local:InvoicesPageDesignTimeViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1000"
    d:DesignWidth="1200"
    dialog:DialogParticipation.Register="{Binding}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <designTime:DesignTimeResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/Deadfile.Infrastructure;component/Styles/Converters.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/Deadfile.Infrastructure;component/Styles/Styles.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/Deadfile.Infrastructure;component/Styles/Themables.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
                        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Red.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </designTime:DesignTimeResourceDictionary>
                <ResourceDictionary>
                    <DataTemplate x:Key="I3DTemplate" DataType="local:IInvoicesPageViewModel">
                        <ScrollViewer Background="White">
                            <Grid Margin="50,0,50,50">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="220" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <DockPanel
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    LastChildFill="True">
                                    <Image
                                        Width="150"
                                        Height="220"
                                        DockPanel.Dock="Left"
                                        Source="Resources/I3D/i3d-logo.png"
                                        Stretch="UniformToFill" />
                                    <Grid DockPanel.Dock="Top">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <DockPanel
                                            Grid.Row="0"
                                            Margin="0,30,0,0"
                                            LastChildFill="True">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Background="#FFFFDDCC"
                                                DockPanel.Dock="Right"
                                                FontSize="54"
                                                FontWeight="Bold"
                                                Foreground="Black"
                                                Text="INVOICE " />
                                            <TextBlock Background="#FFFFDDCC" />
                                        </DockPanel>
                                        <TextBlock
                                            Grid.Row="2"
                                            Margin="25"
                                            FontFamily="Lucida Handwriting"
                                            FontSize="32"
                                            FontStyle="Italic"
                                            Foreground="DarkOrange"
                                            Text="Imagine3D Ltd."
                                            TextDecorations="Underline" />
                                    </Grid>
                                </DockPanel>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Style="{StaticResource Imagine3DTextBlock}" Text="The Glasgow Stud," />
                                        <TextBlock Style="{StaticResource Imagine3DTextBlock}" Text="Burnt Farm Ride," />
                                        <TextBlock Style="{StaticResource Imagine3DTextBlock}" Text="Crews Hill," />
                                        <TextBlock Style="{StaticResource Imagine3DTextBlock}" Text="Enfield, EN2 9DY" />
                                    </StackPanel>
                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="White"
                                            FontFamily="Calibri"
                                            FontSize="12"
                                            Foreground="DarkOrange"
                                            Text="Invoice Number:" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="White"
                                            FontFamily="Calibri"
                                            FontSize="12"
                                            Foreground="DarkOrange"
                                            Text="Date:" />
                                        <TextBlock Grid.Row="2" Grid.Column="0" />
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="White"
                                            FontFamily="Calibri"
                                            FontSize="12"
                                            Foreground="DarkOrange"
                                            Text="To:" />
                                        <TextBlock Grid.Row="4" Grid.Column="0" />
                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Background="White"
                                            FontFamily="Calibri"
                                            FontSize="12"
                                            Foreground="DarkOrange"
                                            Text="Of:" />
                                        <ComboBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="150"
                                            Margin="0,20,0,20"
                                            HorizontalAlignment="Left"
                                            Background="White"
                                            Foreground="Black"
                                            IsEditable="{Binding InvoiceEditable}"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            ItemsSource="{Binding SuggestedInvoiceReferences}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.InvoiceReferenceString}" />
                                        <DatePicker
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            SelectedDate="{Binding SelectedItem.CreatedDate, Mode=TwoWay}"
                                            Style="{StaticResource Imagine3DDatePicker}" />
                                        <TextBox
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            controls:TextBoxHelper.Watermark="Client Name"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            Style="{StaticResource InvoiceTextBox}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientName}" />
                                        <StackPanel Grid.Row="5" Grid.Column="1">
                                            <TextBox
                                                Margin="0,20,0,0"
                                                controls:TextBoxHelper.Watermark="Client Address First Line"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource InvoiceTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressFirstLine}" />
                                            <TextBox
                                                Margin="0,0,0,0"
                                                controls:TextBoxHelper.Watermark="Client Address Second Line"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource InvoiceTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressSecondLine}" />
                                            <TextBox
                                                Margin="0,0,0,0"
                                                controls:TextBoxHelper.Watermark="Client Address Third Line"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource InvoiceTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressThirdLine}" />
                                            <TextBox
                                                Margin="0,0,0,0"
                                                controls:TextBoxHelper.Watermark="Client Post Code"
                                                IsEnabled="{Binding InvoiceEditable}"
                                                Style="{StaticResource InvoiceTextBox}"
                                                Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientAddressPostCode}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="2" Margin="0,50,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="Calibri"
                                            FontSize="16"
                                            Foreground="DarkOrange"
                                            Text="AddressFirstLine:" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="275"
                                            Margin="10"
                                            HorizontalAlignment="Left"
                                            controls:TextBoxHelper.Watermark="Project"
                                            Background="White"
                                            FontFamily="Calibri"
                                            FontSize="12"
                                            Foreground="Black"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.Project}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontFamily="Calibri"
                                            FontSize="16"
                                            Foreground="DarkOrange"
                                            Text="Description:" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="275"
                                            Margin="10"
                                            HorizontalAlignment="Left"
                                            controls:TextBoxHelper.Watermark="Description"
                                            Background="White"
                                            FontFamily="Calibri"
                                            FontSize="12"
                                            Foreground="Black"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.Description}" />
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="3" Margin="0,50,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="200" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Background="DarkOrange"
                                        Foreground="White"
                                        Text="DESCRIPTION" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Background="DarkOrange"
                                        Foreground="White" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="200"
                                        Background="DarkOrange"
                                        Foreground="White"
                                        Text="TOTAL" />
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="DarkOrange"
                                        Text="TOTAL DUE" />
                                    <ItemsControl
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="0,20,0,20"
                                        HorizontalContentAlignment="Stretch"
                                        IsEnabled="{Binding InvoiceEditable}"
                                        ItemsSource="{Binding SelectedItem.Children}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="model:InvoiceItemModel">
                                                <DockPanel LastChildFill="True">
                                                    <Button
                                                        Command="{Binding DeleteCommand}"
                                                        DockPanel.Dock="Right"
                                                        Style="{StaticResource DeleteMiniButton}" />
                                                    <controls:NumericUpDown
                                                        Width="200"
                                                        Height="20"
                                                        Background="White"
                                                        DockPanel.Dock="Right"
                                                        Foreground="Black"
                                                        Value="{Binding NetAmount, StringFormat=C, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                                                    <TextBox
                                                        Margin="0"
                                                        HorizontalAlignment="Stretch"
                                                        controls:TextBoxHelper.Watermark="Item Description"
                                                        Style="{StaticResource InvoiceTextBoxFullWidth}"
                                                        Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=Description}" />
                                                </DockPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Button
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Background="White"
                                        Command="{Binding AddItemCommand}"
                                        Foreground="Black"
                                        Visibility="{Binding InvoiceEditable, Converter={StaticResource BooleanToVisibility}}">
                                        Add Invoice Item
                                    </Button>
                                    <Border
                                        Grid.Row="4"
                                        Grid.Column="2"
                                        Width="100"
                                        Background="#FFFFDDCC"
                                        BorderBrush="DarkOrange"
                                        BorderThickness="0,2,0,2">
                                        <TextBlock Foreground="Black" Text="{Binding SelectedItem.GrossAmount, StringFormat=C}" />
                                    </Border>
                                </Grid>
                                <StackPanel Grid.Row="4" Margin="0,20,0,0">
                                    <TextBlock HorizontalAlignment="Center">Payment terms are 14 days from the date of invoice. Late payments will be charged at a rate of 2% per month.</TextBlock>
                                    <TextBlock HorizontalAlignment="Center">Payment can be made via cheque, made payable to Imagine3D Ltd. or via bank transfer to Account Number:</TextBlock>
                                    <TextBlock HorizontalAlignment="Center">92563142 Sort Code 40‐01‐06</TextBlock>
                                    <TextBlock HorizontalAlignment="Center">Company Registration No: 7595218</TextBlock>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </DataTemplate>
                    <DataTemplate x:Key="PksTemplate" DataType="local:IInvoicesPageViewModel">
                        <ScrollViewer Background="White">
                            <Grid Margin="50,50,50,50">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Foreground="DarkBlue" Text="THE GLASGOW STUD," />
                                        <TextBlock Foreground="DarkBlue" Text="BURNT FARM RIDE," />
                                        <TextBlock Foreground="DarkBlue" Text="CREWS HILL, EN2 9DY" />
                                    </StackPanel>
                                    <Image Grid.Column="2" Source="Resources/PKS/pks-logo.png" />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <StackPanel Margin="20,20,20,20" Background="LightSteelBlue">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="DarkBlue"
                                            Text="INVOICE" />
                                    </StackPanel>
                                </Grid>
                                <Border
                                    Grid.Row="2"
                                    BorderBrush="DarkBlue"
                                    BorderThickness="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource PksTextBlock}"
                                            Text="Invoice Number:" />
                                        <ComboBox
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="150"
                                            Margin="0,20,0,20"
                                            HorizontalAlignment="Left"
                                            Background="White"
                                            Foreground="Black"
                                            IsEditable="{Binding InvoiceEditable}"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            ItemsSource="{Binding SuggestedInvoiceReferences}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.InvoiceReferenceString}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource PksTextBlock}"
                                            Text="Invoice Date:" />
                                        <DatePicker
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            SelectedDate="{Binding SelectedItem.CreatedDate, Mode=TwoWay}"
                                            Style="{StaticResource PksDatePicker}" />
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Style="{StaticResource PksTextBlock}"
                                            Text="Invoiced To:" />
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            controls:TextBoxHelper.Watermark="Client Name"
                                            IsEnabled="{Binding InvoiceEditable}"
                                            Style="{StaticResource PksTextBox}"
                                            Text="{Binding Delay=500, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true, UpdateSourceTrigger=PropertyChanged, Path=SelectedItem.ClientName}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Style="{StaticResource PksTextBlock}"
                                            Text="Invoice Address:" />
