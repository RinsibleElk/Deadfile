<UserControl x:Class="Deadfile.Tab.Home.HomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deadfile.Tab.Home"
             d:DataContext="{d:DesignInstance Type=local:HomePageDesignTimeViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer HorizontalScrollBarVisibility="Visible">
        <Grid Margin="5"
              Background="{StaticResource ContentBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <Button x:Name="AddClient"
                        Style="{StaticResource AddClientButton}"
                        Margin="10,20,0,10"/>
                <Button x:Name="UnbilledClients"
                        Style="{StaticResource UnbilledClientsButton}"
                        Margin="10,20,0,10"/>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal">
                <Button x:Name="LocalAuthorities"
                        Style="{StaticResource LocalAuthoritiesButton}"
                        Margin="10,20,0,10"/>
            </StackPanel>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">
                <Button x:Name="DefineQuotations"
                        Style="{StaticResource DefineQuotationsButton}"
                        Margin="10,20,0,10" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
