<UserControl  x:Class="Deadfile.Content.Clients.ClientsActionsPad"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:clients="clr-namespace:Deadfile.Content.Clients"
              xmlns:prism="http://prismlibrary.com/"
              xmlns:model="clr-namespace:Deadfile.Model;assembly=Deadfile.Model"
              prism:ViewModelLocator.AutoWireViewModel="True"
              mc:Ignorable="d"
              d:DataContext="{d:DesignInstance Type=clients:ClientsActionsPadDesignTimeViewModel, IsDesignTimeCreatable=True}"
              d:DesignHeight="100" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Button Height="64" Width="64" Visibility="{Binding AddClientVisibility}" Command="{Binding AddClientCommand}" Style="{StaticResource AddButton}"/>
        <Button Height="64" Width="64" Visibility="{Binding EditClientVisibility}" Command="{Binding EditClientCommand}" Style="{StaticResource EditButton}"/>
        <Button Height="64" Width="64" Visibility="{Binding SaveClientVisibility}" IsDefault="True" Command="{Binding SaveClientCommand}" Style="{StaticResource SaveButton}"/>
        <Button Height="64" Width="64" Visibility="{Binding DiscardClientVisibility}" IsCancel="True" Command="{Binding DiscardClientCommand}" Style="{StaticResource DiscardButton}"/>
        <Button Height="64" Width="64" Visibility="{Binding DeleteClientVisibility}" Command="{Binding DeleteClientCommand}" Style="{StaticResource DeleteButton}"/>
    </StackPanel>
</UserControl>
